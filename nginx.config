server {
  listen 80;
  charset utf-8;
  root /var/www/runbase/current/frontend/build/;

  server_name runbase.risentveber.ru;
  location /api/ {
    proxy_pass http://unix:/var/www/runbase/shared/tmp/sockets/puma.sock;
  }
  location /apidoc/ {
    alias /var/www/runbase/current/apidoc/;
    try_files $uri.html $uri $uri/ /index.html;
  }
  gzip on;
  gzip_disable "msie6";
  gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript application/javascript;

  location / {
    default_type "text/html";
    try_files $uri.html $uri $uri/ /index.html;
  }
}